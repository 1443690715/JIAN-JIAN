/* pages/Camera/Camera.wxss */
.page {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.flex-wrapper {
  position: absolute;
  bottom: 10%;
  display:flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.hint-view {
  margin-top: 20rpx;
  padding: 8rpx 40rpx;
  color: white;
  border-radius: 40rpx;
  background-color: rgba(0,0,0,0.5);
}
.takeButton {
  height: 120rpx;
  width: 120rpx;
  font-size: 17pt;
  color: green;
  background: #ffffff;
  border: solid #bbbbbb 1rpx;
  border-radius: 50%;
}

.takeButtonIcon {
  width: 60rpx;
  height: 60rpx;
}
.review {
  position: absolute;
  width: 100%;
  height: 100%;
}

.img-wrapper {
  width: 640rpx;
  padding: 0;
}
.words-img {
  display: block;
  width: 640rpx;
  margin: 0;
}

.drawCanvas {
  display: block;
  width: 640rpx;
  border: #bbbbbb 0.5rpx solid;
}
.hint-bottom {
  position: fixed;
  top: 5%;
  display: flex;
  justify-content: center;
}
.hint-wait {
  display: block;
  max-width: 520rpx;
  font-size: 9pt;
  padding: 8rpx 40rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
  color: white;
}

.buttons-row {
  display: flex;
  justify-content: center;
  width: 100%;
}
.bottom-button {
  margin: 20rpx 40rpx;
}