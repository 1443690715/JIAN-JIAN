/* pages/Camera/Camera.wxss */
.flex-wrapper {
  position: absolute;
  bottom: 10%;
  display:flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.hint-view {
  margin-top: 20rpx;
  padding: 8rpx 40rpx;
  color: white;
  border-radius: 40rpx;
  background-color: rgba(0,0,0,0.5);
}
.takeButton {
  height: 120rpx;
  width: 120rpx;
  font-size: 17pt;
  color: green;
  background: #ffffff;
  border: solid #bbbbbb 1rpx;
  border-radius: 50%;
}

.takeButtonIcon {
  width: 60rpx;
  height: 60rpx;
}
.review {
  position: absolute;
  width: 100%;
  height: 100%;
}

.img-wrapper {
  position: relative;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
}
.words-img {
  height: 1000rpx;
}

.drawCanvas {
  position: absolute;
}

.hint-wait {
  color: #bbbbbb;
}