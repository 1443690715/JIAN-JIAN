/* pages/SentencesOfBook/SentencesOfBook.wxss */
.action-bar {
  height: 30%;
  background-color: #fae8d2;
  text-align: center;
  padding-top: 25px;
}

.new-button {
  float: left;
  padding-bottom: 0;
}

.searchbar {
  margin-left: 20px;
  margin-right: 20px;
}

.item-wrapper {
  margin-left: auto;
  margin-right: auto;
  padding-left: 40rpx;
  padding-right: 40rpx;
  font-size: 11pt;
  margin-top: 30rpx;
  margin-bottom: 80rpx;
}

.title {
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  font-size: 25px;
}

.raft-button {
  float: right;
  width: 52rpx;
  height: 52rpx;
}

.book-name, .from-username {
  color: #bbbbbb;
  font-size: 11pt;
}

.book-info-row > text {
  margin-top: auto;
  margin-bottom: auto;
}

.sentences-box {
  margin-top: 52rpx;
  height: 900rpx;
  width: 94%;
  margin-left: auto;
  margin-right: auto;
}
.sentences-list-item {
  margin-top: 40rpx;
  width: 100%;
}
.sentence-label-wrapper {
  width: 10%;
}
.sentence-label {
  margin: 8rpx;
  float: left;
  width: 16rpx;
  height: 16rpx;
}
.sentence-checkbox {
  float: left;
  zoom: 60%;
  max-width: 10%;
}
.sentences-wrapper {
  margin-bottom: 30rpx;
  margin-left: 10%;
  width: 90%;
}
.sentences-item-wrapper {
  margin-bottom: 10rpx;
}

.sentences-item {
  width: 100%;
  color: #353535;
  word-break:break-all;
}

.thought {
  color: #bbbbbb;
  word-break:break-all;
}

.icon-buttons-wrapper {
  position: fixed;
  display: flex;
  justify-content: space-between;
  bottom: 0;
  width: 90%;
  margin: 20rpx 40rpx;
}
.button-image {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}
.icon-buttons-right-wrapper {
  display: flex;
  align-items: center;
  font-size: 11pt;
  color: #8f7b76;
  margin-bottom: 10rpx;
}

.buttons-row {
  position: fixed;
  width: 100%;
  text-align: center;
  bottom: 20rpx;
  left: 40rpx;
}
.bottom-button {
  margin: 20rpx 40rpx;
}