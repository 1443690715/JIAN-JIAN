/* pages/SquareItem/SquareItem.wxss */


.user-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  vertical-align: bottom;
  margin-right: 35rpx;
}

.item-name {
  font-size: 30rpx;
  margin-right: 28rpx;
}
.item-time {
  font-size: 23rpx;
  font-family: sans-serif;
}

.item-wrapper {
  padding: 38rpx;
}

.round-button {
  font-size: 28rpx;
  display: block;
  float: right;
  height: auto;
  width: 128rpx;
  text-align: center;
  margin-top: 14rpx;
  padding: 2rpx;
}

.item-body-wrapper {
  padding: 30rpx;
  padding-bottom: 0;
}

.item-body-wrapper > text, .item-footer > text {
  font-size: 30rpx;
}

.item-sentence {
  display: block;
}

.item-footer, .item-like-comment {
  text-align: right;
}

.item-thought-content {
  color: #bbbbbb;
}

.item-like-comment {
  margin-top: 10rpx;
}
.icon-like, .icon-unlike {
  font-size: 45rpx;
  vertical-align: text-top;
  margin-right: 30rpx;
  transition-duration: 0.2s;
}
.icon-like {
  color: pink;
}
.icon-unlike {
  color: grey;
}
.icon-edit {
  font-size: 50rpx;
  vertical-align: text-bottom;
}

.text-box {
  width: 90%;
  border-radius: 10rpx;
  padding: 20rpx 25rpx;
  border: #bbbbbb 0.5rpx solid;
  margin: 80rpx auto 20rpx;
}
.sentences-ta {
  min-height: 100rpx;
  font-size: 11pt;
  width: 100%;
}

.buttons-row {
  text-align: center;
}
.bottom-button {
  margin: 20rpx 40rpx;
}