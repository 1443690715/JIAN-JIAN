<!--pages/newBook/newBook.wxml-->

<view class='book-info-wrapper'>
    <text>书籍信息</text>
    <view class='book-info-content'>
      <image src='{{title_page_url}}' class='book-info-avator'></image>
      <view class='book-info-word-wrapper'>
        <text class='book-info-title'>书名：{{title}}</text>
        <text class='book-info-others'>作者：{{author}}</text>
        <text class='book-info-others'>isbn：{{isbn}}</text>
      </view>
    </view>
  <view class='buttons-row'>
    <button class='bottom-button' type='default' size='mini' bindtap='goBack'>取消</button>
    <button class='bottom-button' type='primary' size='mini' bindtap='submitNewBook'>保存</button>
  </view>
</view>